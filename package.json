    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-loader": "^4.4.2",
    "ts-node": "^5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
